<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
<li>
  <%# Checkbox FontAwesome%>
  <%= link_to task.title, task_path(task) %>
  <%= link_to task_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash-o"></i>
  <% end %>
</li>
  <% end %>
</ul>

<%= link_to 'Add a new task', new_task_path %>
